       <div><h1 class="text-center text-white p-5">Update Product </h1></div> <br>
        <div class="container-fluid  col-md-6">
            <!-- enctype="multipart/form-data"   -->
            <form class="form-control rounded-3 overflow-visible" action="/admin/updateprdt/<%= result._id %>" method="POST" id="form" >
                <div class="form-group">
                    <p class="text-center fs-4 m-3 ">Product details</p><br>
                    <input type="text" class="form-control p-2" name="pname" value="<%= result.pname %>">
                </div> <br>
                <div class="form-group">
                    <input type="text" class="form-control p-2" name="pcategory" value="<%= result.pcategory %>">
                </div> <br>
                <div class="form-group">
                    <input type="text" class="form-control p-2" name="pdescription" value="<%= result.pdescription %>">
                </div> <br>
                <div class="form-group">
                    <input type="text" class="form-control p-2" name="price" value="<%= result.price %>">
                </div> <br>
                 
                <!-- <div class="form-group">
                    
                    <input type="text"  class="form-control p-2" name=""  value="" hidden>
                </div> <br> -->

                <div class="form-group d-flex">
                    <img src="<%= result.prdtphoto %>" alt="Image" height=70px width="70px" id="imgview" >
                <input type="file" class="form-control p-2" name="prdtphoto" placeholder="Image" onchange="viewimage(event)">
                </div>
                <br>
                <button type="submit" class="btn btn-outline-dark px-3 m-4 mx-auto d-flex justify-content-center">SUBMIT</button>
            </form>
       
        </div>
    <!-- </div> -->
</body>

<script>
   function viewimage(event){
        document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0]);
    }


</script>



